-
  var{ sectionTitle, moreTitle, descriptionList,skillTypeList, category, skillList, label } = data.content.skills
include ../header/header
include ../layout/base

block awesome-content
  .text
    .text__info-box
      button.button-transparent
        .icoana
          a(href="https://www.youtube.com/watch?v=GAdak4L8gsA" title="bankai" target="_blank")
            .cv-youtube

      .flex-gap16
        .box__gap-8
          .box__info-box
            .text__section-title= moreTitle
          .box__gap-8
            each text in descriptionList
              .box-descriere= text

          .wrap
            each skills in skillTypeList
              .wrap
                .title= skills.category

                .skillContainer
                  each element in skills.skillList
                    div(
                      class=`pill--${element.color}`
                    )= element.label